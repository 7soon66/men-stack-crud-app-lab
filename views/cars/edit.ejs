<body>
  <h1>Edit <%= car.name %></h1>
  <form action="/cars/<%= car._id  %>?_method=PUT" method="post">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= car.name  %>"/>

    <br />
    <label for="description">description:</label>
    <input type="text" name="description" id="description" value="<%= car.description  %>"/>

    <br />
    <label for="image">image:</label>
    <input type="text" name="image" id="image" value="<%= car.image  %>"/>

    <input type="hidden" name="_method" value="PUT">
    <button type="submit">Update Car</button>
  </form>
</body>
